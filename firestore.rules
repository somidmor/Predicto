rules_version = '2';

// ============================================
// PREDICTO - Firestore Security Rules
// ============================================
// Since we're not using Firebase Auth, we rely on
// Cloud Functions for write operations and allow
// reads for session data.

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection (legacy - kept for backwards compatibility)
    match /users/{userId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Sessions collection
    match /sessions/{sessionId} {
      // Allow reads for session data
      allow read: if true;
      
      // Writes only via Cloud Functions
      allow write: if false;
      
      // Participants subcollection (session-scoped users)
      match /participants/{participantDocId} {
        allow read: if true;
        allow write: if false;
      }
      
      // Challenges subcollection
      match /challenges/{challengeId} {
        allow read: if true;
        allow write: if false;
      }
      
      // Bets subcollection (audit trail)
      match /bets/{betId} {
        allow read: if true;
        allow write: if false;
      }
      
      // Transactions subcollection
      match /transactions/{transactionId} {
        allow read: if true;
        allow write: if false;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
